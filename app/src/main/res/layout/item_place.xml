<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card:cardElevation="2dp"
    card:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/place_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:text="&#x2715;"/>

        <TextView
            android:id="@+id/place_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            tools:text="Pete's BBQ" />

        <TextView
            android:id="@+id/place_text_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_text_title"
            tools:text="2345 Mission St, San Francisco" />
        
        <ImageView
            android:id="@+id/place_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/place_text_address"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/place_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_image"
            android:textSize="12sp"
            tools:text="Tags: food, cheap, mission"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>